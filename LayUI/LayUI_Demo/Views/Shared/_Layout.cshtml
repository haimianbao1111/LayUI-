<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - LayUIDemo</title>
    <link href="~/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Content/framework/animate.css" rel="stylesheet" />

    <script src="~/Scripts/jquery/jquery.min.js"></script>
    <script src="~/layui/layui.js"></script>
    <script src="~/Scripts/framework/global.js"></script>
    <style>
        body { margin: 10px;}
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - LayUIDemo</p>
        </footer>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>

